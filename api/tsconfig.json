{
    "compilerOptions": {
        "lib": [
            "ES2020"
        ],
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "types": [
            "node",
            "express"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./server/types"
        ]
    },
    "include": [
        "api/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}