{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "ES2020"
        ],
        "skipLibCheck": true,
        "strict": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "isolatedModules": true,
        "types": [
            "node",
            "express"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./server/types"
        ],
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "./shared/*"
            ]
        }
    },
    "include": [
        "server/**/*",
        "api/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "client"
    ]
}