{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pnpm install && pnpm run build"
    },
    "deploy": {
        "startCommand": "npx prisma migrate deploy && pnpm run start",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}